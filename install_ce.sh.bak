# æ˜¾ç¤ºè¿›åº¦åŠ¨ç”»
# å‚æ•°: $1 (è¿›ç¨‹PID)
show_progress() {
    local pid=$1
    local delay=0.1
    local spin_chars="â ‹â ™â ¹â ¸â ¼â ´â ¦â §â ‡â " # æ›´ç°ä»£çš„æ—‹è½¬å­—ç¬¦
    local i=0
    echo -n " "
    while ps -p "$pid" > /dev/null; do
        i=$(( (i+1) % ${#spin_chars} ))
        printf "\b${BLUE}%c${NC}" "${spin_chars:$i:1}"
        sleep "$delay"
    done
    printf "\b \b" # æ¸…é™¤æ—‹è½¬ç¬¦
}

