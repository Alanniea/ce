    rm -f "$CONFIG_FILE.bak" # æ¸…ç†å¤‡ä»½æ–‡ä»¶
    
    log_message "INFO" "åˆå§‹åŒ–æ¯æ—¥è®¡æ•°å™¨: RX=$(format_traffic "$current_rx"), TX=$(format_traffic "$current_tx")"
}

