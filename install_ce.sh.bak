    local rx_bytes_prev=0
    local tx_bytes_prev=0
    
    trap 'echo -e "\n${YELLOW}ğŸ‘‹ é€€å‡ºå®æ—¶ç½‘é€Ÿæ˜¾ç¤º...${NC}"; tput cnorm; return' INT
    tput civis # éšè—å…‰æ ‡

