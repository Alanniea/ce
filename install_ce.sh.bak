    if ! sed -i.bak "s/^DAILY_START_RX=.*/DAILY_START_RX=$current_rx/" "$CONFIG_FILE"; then log_message "ERROR" "æ›´æ–° DAILY_START_RX å¤±è´¥ã€‚"; fi
